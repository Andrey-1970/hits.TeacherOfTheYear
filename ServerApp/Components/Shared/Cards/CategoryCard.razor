@using ServerApp.Data.Models.EditModel

<div class="category-card" type="button" @onclick="async () => await ViewInfoHandler(Track.Id)">
  <div class="category-description">
    <div class="category-title">@Track.Name</div>
  </div>
</div>

@code {
    [Parameter, EditorRequired]
    public TrackModel Track { get; set; } = default!;

    [Parameter, EditorRequired]
    public EventCallback<Guid> ViewInfo { get; set; }

    async Task ViewInfoHandler(Guid trackId)
    {
        await ViewInfo.InvokeAsync(trackId);
    }
}