@page "/admin/categories/{Id:guid}"
@page "/admin/categories/new"

<PageTitle>Настройка Category</PageTitle>

<div class="block">
    <div class="block-title">
        <div class="block-title-text">
            Редактирование Category
        </div>
    </div>
    <div class="block-content">
        <EditForm Class="w-100" Model="category" OnValidSubmit="OnValidSumbit">
            <div class="form-text">Номер Category</div>
            <div class="form-input w-100 mb-3">
                <InputNumber class="form-control" placeholder="Введите номер Category" @bind-Value="category.Number" disabled="@(category.Id != Guid.Empty)" />
            </div>
            <div class="form-text">Название Category</div>
            <div class="form-input w-100 mb-3">
                <InputText class="form-control mb-3" placeholder="Введите название Category" @bind-Value="category.Name" />
            </div>

            <div class="d-flex flex-row gap-2 mt-2 mb-2 justify-content-center w-100">
                <Button Color="ButtonColor.Success" Type="ButtonType.Submit">Сохранить</Button>
                <a type="button" class="btn btn-secondary" href="/admin/categories">Назад</a>
            </div>
        </EditForm>
    </div>
</div>

@code {
    [Parameter]
    public Guid Id { set; get; }
    Category category = new();

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        if (Id != Guid.Empty)
        {
            category = await data.Category.GetByIdAsync(Id);
        }
    }

    async Task OnValidSumbit()
    {
        await data.Category.SaveAsync(category);
        navigation.NavigateTo("/admin/categories");
    }
}
