        <div class="block-content">
            <Accordion Class="w-100">
                @foreach (var track in tracks)
                {
                    <AccordionItem Title="@track.Name">
                        <Content>
                            @foreach (var category in categories)
                            {
                                <CategoryCard Title="@category.Name" Track="track" ViewParticipants="async (trackId) => await ViewParticipantsHandler(trackId)"></CategoryCard>
                            }
                        </Content>
                    </AccordionItem>
                }
            </Accordion>

        </div>
