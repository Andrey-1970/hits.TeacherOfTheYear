@code {
    private DateTime targetDate = new DateTime(2024, 10, 20); // Отсчет до конца приема заявок

    private string? days;
    private string? hours;
    private string? minutes;

    private Timer? timer;

    private ConfirmDialog? dialog;

    protected override void OnInitialized()
    {

        // Timer с интервалом 1 секунда
        timer = new Timer(1000);

        // событие Elapsed
        timer.Elapsed += UpdateCountdown!;

        // Запуск таймера
        timer.Start();
    }

    private async Task ShowConfirmationAsync()
    {
        var options = new ConfirmDialogOptions
            {
                IsVerticallyCentered = true,
                NoButtonText = "Нет",
                YesButtonText = "Да",
            };
        var confirmation = await dialog!.ShowAsync(
            title: "Подтвердите действие",
            message1: "Для подачи заявки на участие необходима авторизация на сайте.",
            message2: "Перейти на страницу авторизации?",
            confirmDialogOptions: options);

        if (confirmation)
        {
            navigate.NavigateTo("/application-form#");
        }
    }

    private void UpdateCountdown(object sender, ElapsedEventArgs e)
    {
        TimeSpan remainingTime = targetDate - DateTime.Now;

        // Проверка завершения отсчета
        if (remainingTime.TotalSeconds >= 0)
        {
            days = remainingTime.Days.ToString("D2");
            hours = remainingTime.Hours.ToString("D2");
            minutes = remainingTime.Minutes.ToString("D2");

            // Обновление UI
            InvokeAsync(StateHasChanged);
        }
        else if (targetDate == new DateTime(2024, 10, 20))
        {
            // Остановка таймера, если отсчет завершен
            timer!.Stop();

            targetDate = new DateTime(2024, 12, 1); // Отсчет до конца голосования

            // Перезапуск таймера
            timer.Start();
        }
        else
        {
            timer!.Stop();
        }
    }
}